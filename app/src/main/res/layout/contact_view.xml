<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_line"
        android:layout_marginTop="20dp"
        android:background="@color/divideLineGray" />

    <LinearLayout
        android:id="@+id/rl_activity_carrier_import_tudi_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_my_item_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/fragment_my_item_padding_left">

        <TextView
            android:layout_width="@dimen/fragment_my_item_left_tv_width"
            android:layout_height="wrap_content"
            android:text="联系人"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <com.mms.widget.CancelableEditView
            android:id="@+id/et_activity_carrier_import_tudi_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            app:cancelIcon="@drawable/chacha"
            app:editTextSize="17sp"
            app:hintColor="@color/hintGray"
            app:hintText="请输入联系人姓名">

        </com.mms.widget.CancelableEditView>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_line"
        android:layout_marginLeft="@dimen/fragment_my_item_padding_left"
        android:background="@color/divideLineGray" />

    <RelativeLayout
        android:id="@+id/rl_activity_carrier_import_tudi_sex"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_my_item_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/fragment_my_item_padding_left">

        <TextView
            android:layout_width="@dimen/fragment_my_item_left_tv_width"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="性别"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <RadioGroup
            android:id="@+id/rg_activity_carrier_import_tudi_sex"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_activity_carrier_import_tudi_sex_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="先生"
                android:textColor="@color/textGray"
                android:textSize="17sp" />

            <RadioButton
                android:id="@+id/rb_activity_carrier_import_tudi_sex_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="女士"
                android:textColor="@color/textGray"
                android:textSize="17sp" />

        </RadioGroup>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_line"
        android:layout_marginLeft="@dimen/fragment_my_item_padding_left"
        android:background="@color/divideLineGray" />

    <LinearLayout
        android:id="@+id/rl_activity_carrier_import_tudi_zhiwu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_my_item_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/fragment_my_item_padding_left">

        <TextView
            android:layout_width="@dimen/fragment_my_item_left_tv_width"
            android:layout_height="wrap_content"
            android:text="职务"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <com.mms.widget.CancelableEditView
            android:id="@+id/et_activity_carrier_import_tudi_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            app:cancelIcon="@drawable/chacha"
            app:editTextSize="17sp"
            app:hintColor="@color/hintGray"
            app:hintText="请输入联系人职务">

        </com.mms.widget.CancelableEditView>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_line"
        android:layout_marginLeft="@dimen/fragment_my_item_padding_left"
        android:background="@color/divideLineGray" />

    <LinearLayout
        android:id="@+id/rl_activity_carrier_import_tudi_mobilephone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_my_item_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/fragment_my_item_padding_left">

        <TextView
            android:layout_width="@dimen/fragment_my_item_left_tv_width"
            android:layout_height="wrap_content"
            android:text="手机"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <com.mms.widget.CancelableEditView
            android:id="@+id/et_activity_carrier_import_tudi_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            app:cancelIcon="@drawable/chacha"
            app:editTextSize="17sp"
            app:hintColor="@color/hintGray"
            app:hintText="请输入联系人手机号码"
            app:textType="number">

        </com.mms.widget.CancelableEditView>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_line"
        android:layout_marginLeft="@dimen/fragment_my_item_padding_left"
        android:background="@color/divideLineGray" />

    <RelativeLayout
        android:id="@+id/rl_activity_carrier_import_tudi_telephone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_my_item_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/fragment_my_item_padding_left">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="座机"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/et_activity_carrier_import_tudi_telephone_quhao"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:background="@color/white"
            android:hint="区号"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="@color/textGray"
            android:textColorHint="@color/hintGray"
            android:textSize="17sp" />

        <View
            android:layout_width="10dp"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/et_activity_carrier_import_tudi_telephone_quhao"
            android:background="@color/divideLineGray" />

        <EditText
            android:id="@+id/et_activity_carrier_import_tudi_telephone_zuoji"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="160dp"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:hint="座机"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="@color/textGray"
            android:textColorHint="@color/hintGray"
            android:textSize="17sp" />

        <View
            android:layout_width="10dp"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/et_activity_carrier_import_tudi_telephone_zuoji"
            android:background="@color/divideLineGray" />

        <EditText
            android:id="@+id/et_activity_carrier_import_tudi_telephone_fenji"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="260dp"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:hint="分机"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="@color/textGray"
            android:textColorHint="@color/hintGray"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btn_activity_carrier_import_tudi_telephone_del"
            android:layout_width="@dimen/chachaWidth"
            android:layout_height="@dimen/chachaHeight"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:background="@drawable/chacha"
            android:visibility="invisible" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_line"
        android:layout_marginLeft="@dimen/fragment_my_item_padding_left"
        android:background="@color/divideLineGray" />

    <LinearLayout
        android:id="@+id/rl_activity_carrier_import_tudi_mail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_my_item_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/fragment_my_item_padding_left">

        <TextView
            android:layout_width="@dimen/fragment_my_item_left_tv_width"
            android:layout_height="wrap_content"
            android:text="邮箱"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <com.mms.widget.CancelableEditView
            android:id="@+id/et_activity_carrier_import_tudi_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            app:cancelIcon="@drawable/chacha"
            app:editTextSize="17sp"
            app:hintColor="@color/hintGray"
            app:hintText="请输入联系人邮箱地址">

        </com.mms.widget.CancelableEditView>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_line"
        android:layout_marginLeft="@dimen/fragment_my_item_padding_left"
        android:background="@color/divideLineGray" />

    <LinearLayout
        android:id="@+id/rl_activity_carrier_import_tudi_remark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_my_item_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/fragment_my_item_padding_left">

        <TextView
            android:layout_width="@dimen/fragment_my_item_left_tv_width"
            android:layout_height="wrap_content"
            android:text="备注"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <com.mms.widget.CancelableEditView
            android:id="@+id/et_activity_carrier_import_tudi_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            app:cancelIcon="@drawable/chacha"
            app:editTextSize="17sp"
            app:hintColor="@color/hintGray"
            app:hintText="请输入联系人备注信息">

        </com.mms.widget.CancelableEditView>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_line"
        android:background="@color/divideLineGray" />
</LinearLayout>