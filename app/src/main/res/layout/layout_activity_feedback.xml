<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGray"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleBarHeight"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="反馈意见"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_activity_feedback_back"
            android:layout_width="@dimen/backButtonWidth"
            android:layout_height="@dimen/backButtonHeight"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/backarrowselector" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_line"
        android:background="@color/divideLineGray" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@null"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/fragment_my_item_padding_left"
        android:text="问题和意见"
        android:textColor="@color/filterTextGray"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_line"
        android:background="@color/divideLineGray" />


    <EditText
        android:id="@+id/et_activity_feed_back_intro"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:gravity="top"
        android:hint="请详细描述你的问题和意见"
        android:paddingBottom="6dp"
        android:paddingLeft="@dimen/fragment_my_item_padding_left"
        android:paddingRight="@dimen/fragment_my_item_padding_left"
        android:paddingTop="6dp"
        android:textColor="@color/black"
        android:textColorHint="@color/hintGray"
        android:textSize="@dimen/fragment_my_item_left_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_line"
        android:background="@color/divideLineGray" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@null"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/fragment_my_item_padding_left"
        android:text="图片（选填，提供问题截图）"
        android:textColor="@color/filterTextGray"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_line"
        android:background="@color/divideLineGray" />
    <!--后续添加上传图片的view-->
    <com.mms.widget.uploadImagesLayout.OperateImagesLayout
        android:id="@+id/oil_activity_feed_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="13dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_line"
        android:background="@color/divideLineGray" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@null"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/fragment_my_item_padding_left"
        android:text="QQ/邮箱"
        android:textColor="@color/filterTextGray"
        android:textSize="15sp" />
    <EditText
        android:id="@+id/et_activity_feed_back_contact"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_my_item_height"
        android:background="@color/white"
        android:gravity="top"
        android:hint="（选填，方便我们联系你）"
        android:paddingBottom="6dp"
        android:paddingLeft="@dimen/fragment_my_item_padding_left"
        android:paddingRight="@dimen/fragment_my_item_padding_left"
        android:paddingTop="6dp"
        android:textColor="@color/black"
        android:textColorHint="@color/hintGray"
        android:textSize="@dimen/fragment_my_item_left_text_size" />

    <!--此button在代码中设置样式-->
    <Button
        android:id="@+id/btn_activity_feed_back_sub"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="8dp"
        android:text="提    交"
        android:textColor="@color/white"
        android:textSize="20sp" />

</LinearLayout>