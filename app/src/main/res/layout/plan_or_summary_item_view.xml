<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGray"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_line"
        android:background="@color/divideLineGray" />

    <RelativeLayout
        android:id="@+id/rl_plan_or_summary_item_begin_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_my_item_height"
        android:background="@drawable/whitebuttonselector"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/fragment_my_item_padding_left">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="开始时间"
            android:textColor="@color/black"
            android:textSize="@dimen/fragment_my_item_left_text_size" />

        <TextView
            android:id="@+id/tv_plan_or_summary_item_begin_time"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:background="@null"
            android:text="请选择"
            android:textColor="@color/hintGray"
            android:textSize="@dimen/fragment_my_item_left_text_size" />

        <Button
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:background="@drawable/right" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_line"
        android:layout_marginLeft="@dimen/fragment_my_item_padding_left"
        android:background="@color/divideLineGray" />

    <RelativeLayout
        android:id="@+id/rl_plan_or_summary_item_end_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_my_item_height"
        android:background="@drawable/whitebuttonselector"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/fragment_my_item_padding_left">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="结束时间"
            android:textColor="@color/black"
            android:textSize="@dimen/fragment_my_item_left_text_size" />

        <TextView
            android:id="@+id/tv_plan_or_summary_item_end_time"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:background="@null"
            android:text="请选择"
            android:textColor="@color/hintGray"
            android:textSize="@dimen/fragment_my_item_left_text_size" />

        <Button
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:background="@drawable/right" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_line"
        android:background="@color/divideLineGray" />

    <TextView
        android:id="@+id/tv_plan_or_summary"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@null"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/fragment_my_item_padding_left"
        android:text="工作计划"
        android:textColor="@color/filterTextGray"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_line"
        android:background="@color/divideLineGray" />


    <EditText
        android:id="@+id/et_plan_or_summary_item"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:gravity="top"
        android:hint="请输入工作计划"
        android:paddingBottom="6dp"
        android:paddingLeft="@dimen/fragment_my_item_padding_left"
        android:paddingRight="@dimen/fragment_my_item_padding_left"
        android:paddingTop="6dp"
        android:textColor="@color/black"
        android:textColorHint="@color/hintGray"
        android:textSize="@dimen/fragment_my_item_left_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_line"
        android:background="@color/divideLineGray" />

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp" />

</LinearLayout>